<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroProveedor">

    <LinearLayout
        android:id="@+id/liner1"
        android:padding="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/liner1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="25dp"
            android:text="InformaciÃ³n personal"
            android:textColor="@color/skinBlack"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edit_text_nombre_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="16dp"
            android:hint="Nombre completo"
            android:paddingVertical="12dp"
            android:background="@drawable/rectangle_border"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/edit_text_apellido_paterno"
                android:layout_marginEnd="3dp"
                android:paddingStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Apellido Paterno"
                android:paddingVertical="12dp"
                android:background="@drawable/rectangle_border"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:inputType="text"/>
            <EditText
                android:id="@+id/edit_text_apellido_materno"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:layout_marginStart="3dp"
                android:hint="Apellido Materno"
                android:paddingVertical="12dp"
                android:background="@drawable/rectangle_border"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:inputType="text"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_fecha_nacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="16dp"
            android:hint="Fecha de nacimiento"
            android:paddingVertical="12dp"
            android:background="@drawable/rectangle_border"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:inputType="date"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/edit_text_dni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="DNI"
                android:layout_marginEnd="3dp"
                android:paddingVertical="12dp"
                android:paddingStart="16dp"
                android:background="@drawable/rectangle_border"
                android:textStyle="bold"
                android:inputType="number"/>
            <EditText
                android:id="@+id/edit_text_celular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:paddingStart="16dp"
                android:hint="Celular"
                android:paddingVertical="12dp"
                android:background="@drawable/rectangle_border"
                android:textStyle="bold"
                android:inputType="phone"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/distritoSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingVertical="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_ofrece_servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Sexo"
            android:textStyle="bold"
            android:layout_marginStart="5dp"/>

        <RadioGroup
            android:id="@+id/radio_group_servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radio_masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Masculino"
                android:layout_marginEnd="50dp"/>

            <RadioButton
                android:id="@+id/radio_femenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Femenino"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/liner2">

        <Button
            android:id="@+id/button_enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:text="Enviar"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
