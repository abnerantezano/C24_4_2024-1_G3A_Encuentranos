<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.AgregarServicioActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_vacio"
        />

    <TextView
        android:id="@+id/tvAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agregar_servicio"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/skinBlack"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/tvInputs"/>

    <LinearLayout
        android:id="@+id/tvInputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvAgregar"
        app:layout_constraintBottom_toTopOf="@id/linearVolverEnviar">
        <Spinner
            android:id="@+id/servicioSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingVertical="12dp"
            android:background="@drawable/rectangle_border" />
        <EditText
            android:id="@+id/edtPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="16dp"
            android:hint="@string/precio"
            android:paddingVertical="12dp"
            android:background="@drawable/rectangle_border"
            android:textStyle="bold"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearVolverEnviar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvInputs"
        app:layout_constraintStart_toStartOf="@+id/tvInputs"
        app:layout_constraintTop_toBottomOf="@id/tvInputs">

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background"
            android:text="@string/guardar"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/regresar"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
