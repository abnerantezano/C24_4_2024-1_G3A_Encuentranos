<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.RegistroProveedorOClienteActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_vacio"
        />
    <LinearLayout
        android:id="@+id/liner2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:id="@+id/tvObtenerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:text="@string/informaci_n_personal"
            android:textColor="@color/skinBlack"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edit_text_nombre_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingStart="16dp"
            android:hint="@string/nombre_completo"
            android:paddingVertical="12dp"
            android:background="@drawable/rectangle_border"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/edit_text_apellido_paterno"
                android:layout_marginEnd="3dp"
                android:paddingStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/apellido_paterno"
                android:paddingVertical="12dp"
                android:background="@drawable/rectangle_border"
                android:textStyle="bold"
                android:inputType="text"/>
            <EditText
                android:id="@+id/edit_text_apellido_materno"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:layout_marginStart="3dp"
                android:hint="@string/apellido_materno"
                android:paddingVertical="12dp"
                android:background="@drawable/rectangle_border"
                android:textStyle="bold"
                android:inputType="text"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edtFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="false"
            android:clickable="true"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:hint="@string/fecha_de_nacimiento"
            android:paddingVertical="12dp"
            android:background="@drawable/rectangle_border"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:inputType="date"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/edit_text_dni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/dni"
                android:layout_marginEnd="3dp"
                android:paddingVertical="12dp"
                android:paddingStart="16dp"
                android:background="@drawable/rectangle_border"
                android:textStyle="bold"
                android:maxLength="8"
                android:inputType="number"/>
            <EditText
                android:id="@+id/edit_text_celular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:paddingStart="16dp"
                android:hint="@string/celular"
                android:paddingVertical="12dp"
                android:background="@drawable/rectangle_border"
                android:textStyle="bold"
                android:maxLength="9"
                android:inputType="phone"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/distritoSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingVertical="12dp"
            android:background="@drawable/rectangle_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_ofrece_servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sexo"
            android:textStyle="bold"
            android:layout_marginStart="5dp"/>

        <RadioGroup
            android:id="@+id/radio_sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radio_masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/masculino"
                android:layout_marginEnd="50dp"/>

            <RadioButton
                android:id="@+id/radio_femenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/femenino"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearVolverEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/liner2">

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background"
            android:paddingHorizontal="103dp"
            android:text="@string/enviar"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/regresar"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>